<h1>Doses Adjustments</h1>
<p>Find me in app/views/doses/new.html.erb</p>

<%= simple_form_for([@cocktail, @dose]) do |f| %>
  <%= f.input :description%>
  <%= collection_select(:dose, :ingredient_id, Ingredient.all, :id, :name) %>
  <%= f.submit "Add", class: "btn btn-primary" %>
<% end %>
<%= link_to "Back", cocktail_path(@cocktail) %>
